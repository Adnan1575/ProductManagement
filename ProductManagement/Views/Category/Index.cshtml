@model CategoryInfoModel
@{
    ViewData["Title"] = "Index";
}
<h1>Category</h1>

<a class="btn btn-primary" asp-action="AddEditcategory">Add</a>

    @if(Model != null)
{
    if (Model.CategoriesList.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th> Sr No </th>
                    <th> Product Name </th>
                    <th> Price </th>
                    <th> Date </th>
                    <th> Action </th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model.CategoriesList)
                {
                    <tr>
                        <td> @item.Category_Id </td>
                        <td> @item.CategoryTitle </td>
                        <td> @item.CategoryStatus </td>
                        <td> @item.CreationDate </td>
                        <td>
                            <a   class="btn btn-primary"  asp-action="AddEditcategory" asp-route-id="@item.Category_Id">Edit</a>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Category_Id">Details</a>
                            <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.Category_Id">Delete</a>
                        </td>
                    </tr>
                }
               
            </tbody>
        </table>
    }
}
